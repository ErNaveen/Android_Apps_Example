<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:orientation="vertical" 
    android:background="@drawable/bg" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
  
    
    <LinearLayout 
        android:layout_width="fill_parent" 
        android:layout_height="0.0dp" 
        android:layout_marginLeft="20.0dp" 
        android:layout_marginTop="20.0dp" 
        android:layout_marginRight="20.0dp" 
        android:layout_marginBottom="10.0dp" 
        android:layout_weight="0.4"
		android:orientation="horizontal">
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">
            
            <ImageView 
            android:id="@+id/display_Alphabet1" 
            android:layout_width="match_parent" 
            android:layout_height="0dip"
            android:layout_weight="1"
            android:contentDescription="" 
            android:src="@drawable/ic_launcher" />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">
            <ImageView 
            android:id="@+id/display_Alphabet2" 
            android:layout_width="fill_parent" 
            android:layout_height="0dp"
            android:layout_weight="0.65"
            android:contentDescription="" 
            android:src="@drawable/ic_launcher" />
            <ImageView 
            android:id="@+id/display_Alphabet3" 
            android:layout_width="fill_parent" 
            android:layout_height="0dp"
            android:layout_weight="0.35"
            android:contentDescription="" 
            android:src="@drawable/ic_launcher" />
            
            </LinearLayout>
        
        
    </LinearLayout>
    
    
    <LinearLayout 
        android:orientation="horizontal" 
        android:layout_width="fill_parent" 
        android:layout_height="0.0dp" 
        android:layout_marginTop="25.0dp" 
        android:layout_marginBottom="10.0dp" 
        android:layout_weight="0.65">
        
        
        <LinearLayout 
            android:orientation="vertical" 
            android:layout_width="wrap_content" 
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/marginT" 
            android:layout_weight="@dimen/size1">
            
            
            <LinearLayout 
                android:orientation="vertical" 
                android:layout_width="fill_parent" 
                android:layout_height="0.0dp" 
                android:layout_weight="0.5">
                
                <Button 
                    android:id="@+id/replay"
                    android:layout_width="@dimen/butsizesmall"
                    android:layout_height="@dimen/butsizesmall"
                    android:layout_gravity="center"
                    android:background="@drawable/repeat"/>
                <ToggleButton 
                    android:layout_gravity="center" 
                    android:id="@+id/playPause" 
                    android:layout_width="@dimen/butsizesmall" 
                    android:layout_height="@dimen/butsizesmall" 
                    android:layout_marginTop="@dimen/butmarsmall"
                    android:background="@drawable/play_03"
                    android:textOn=""
                    android:textOff="" />
                
                <Button  
                	android:layout_gravity="center"
                    android:id="@+id/reset_canvas" 
                    android:layout_width="@dimen/butsizesmall" 
                    android:layout_height="@dimen/butsizesmall" 
                    android:background="@drawable/clear"
                    android:layout_marginTop="@dimen/butmarsmall"
                     />
                
                
                
            </LinearLayout>
            
            
            <LinearLayout 
                android:orientation="vertical" 
                android:layout_width="fill_parent" 
                android:layout_height="0.0dp" 
                android:layout_marginTop="13.0dp" 
                android:layout_weight="0.5">
                
                
                <Button 
                    android:layout_gravity="center" 
                    android:id="@+id/previous_Alphabet" 
                    android:background="@drawable/prev_button" 
                    android:layout_marginTop="@dimen/butmar"
                    android:layout_width="@dimen/butsize" 
                    android:layout_height="@dimen/butsize" />
                
                
                <Button 
                    android:layout_gravity="center" 
                    android:id="@+id/next_Alphabet" 
                    android:background="@drawable/next_button" 
                    android:layout_width="@dimen/butsize"
                    android:layout_height="@dimen/butsize" 
                    android:layout_marginTop="@dimen/butmar" />
                
                
            </LinearLayout>
            
            
        </LinearLayout>
        
        
        <LinearLayout 
            android:layout_width="0.0dp" 
            android:layout_height="fill_parent" 
            android:layout_weight="1.0"
            android:orientation="vertical">
            
            
            <LinearLayout 
                android:id="@+id/canvas_Alphabets"  
                android:layout_width="fill_parent" 
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:orientation="vertical" />
            
            
            
        </LinearLayout>
        
        
    </LinearLayout>
    
    
</LinearLayout>