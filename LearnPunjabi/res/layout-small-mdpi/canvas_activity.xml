<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/single"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:layout_weight="0.79"
        android:orientation="horizontal" >
        
        <LinearLayout 
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:orientation="vertical">
            
             <LinearLayout 
            android:layout_height="0dp"
            android:layout_width="match_parent"
             android:layout_weight="0.33"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/alphabetView_CanvasMDPI"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@drawable/ic_launcher" 
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                
                />
            </LinearLayout>
            
             <LinearLayout 
            android:layout_height="0dp"
            android:layout_width="match_parent"
             android:layout_weight="0.33"
            android:orientation="vertical">
            <Button 
                android:id="@+id/backButton_CanavsMDPI"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="13dp"
                android:layout_gravity="center"
                android:background="@drawable/prev_button"/>
            </LinearLayout>
            
             <LinearLayout 
            android:layout_height="0dp"
            android:layout_width="match_parent"
             android:layout_weight="0.33"
            android:orientation="vertical">
             <Button
        android:id="@+id/reset_canvas"
        android:layout_width="50.0dp"
        android:layout_height="50.0dp"
        android:layout_marginTop="13dp"
        android:layout_gravity="center"
        android:text="Reset" />
            </LinearLayout>
            
        </LinearLayout>
		<LinearLayout 
            android:layout_weight="0.75"
            android:layout_height="match_parent"
            android:layout_width="0dp">
            
        
   		 <LinearLayout 
                android:id="@+id/canvas_Alphabets"                  
                android:layout_width="match_parent" 
                android:layout_height="match_parent" 
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical" />
		</LinearLayout>
    
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:orientation="horizontal" >
      
    </LinearLayout>

</LinearLayout>
